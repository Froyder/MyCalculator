<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textField"
        android:textAlignment="textEnd"
        android:hint="@string/hint"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textColorHint="#737373"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toTopOf="@id/button_7"
        app:layout_constraintEnd_toEndOf="@id/button_multiplication"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_7"
        android:text="@string/button7"
        app:layout_constraintBottom_toTopOf="@id/button_4"
        app:layout_constraintEnd_toStartOf="@id/button_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textField"
        style="@style/buttonsMain"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_8"
        android:text="@string/button8"
        app:layout_constraintBottom_toTopOf="@id/button_5"
        app:layout_constraintEnd_toStartOf="@id/button_9"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintTop_toBottomOf="@id/textField"
        style="@style/buttonsMain"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_9"
        android:text="@string/button9"
        app:layout_constraintBottom_toTopOf="@id/button_6"
        app:layout_constraintEnd_toStartOf="@id/button_multiplication"
        app:layout_constraintStart_toEndOf="@+id/button_8"
        app:layout_constraintTop_toBottomOf="@id/textField"
        style="@style/buttonsMain"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_multiplication"
        android:text="@string/button_mult"
        app:layout_constraintBottom_toTopOf="@id/button_minus"
        app:layout_constraintStart_toEndOf="@+id/button_9"
        app:layout_constraintTop_toBottomOf="@id/textField"
        style="@style/buttonsSpecial"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_4"
        android:text="@string/button4"
        app:layout_constraintBottom_toTopOf="@id/button_1"
        app:layout_constraintEnd_toStartOf="@id/button_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_7"
        style="@style/buttonsMain"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_5"
        android:text="@string/button5"
        app:layout_constraintBottom_toTopOf="@id/button_2"
        app:layout_constraintEnd_toStartOf="@id/button_6"
        app:layout_constraintStart_toEndOf="@+id/button_4"
        app:layout_constraintTop_toBottomOf="@id/button_8"
        style="@style/buttonsMain"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_6"
        android:text="@string/button6"
        app:layout_constraintBottom_toTopOf="@id/button_3"
        app:layout_constraintEnd_toStartOf="@id/button_minus"
        app:layout_constraintStart_toEndOf="@+id/button_5"
        app:layout_constraintTop_toBottomOf="@id/button_9"
        style="@style/buttonsMain"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_minus"
        android:text="@string/button_minus"
        app:layout_constraintBottom_toTopOf="@id/button_plus"
        app:layout_constraintStart_toEndOf="@+id/button_6"
        app:layout_constraintTop_toBottomOf="@id/button_multiplication"
        style="@style/buttonsSpecial"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_1"
        android:text="@string/button1"
        app:layout_constraintBottom_toTopOf="@id/button_C"
        app:layout_constraintEnd_toStartOf="@id/button_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_4"
        style="@style/buttonsMain"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_2"
        android:text="@string/button2"
        app:layout_constraintBottom_toTopOf="@id/button_0"
        app:layout_constraintEnd_toStartOf="@id/button_3"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:layout_constraintTop_toBottomOf="@id/button_5"
        style="@style/buttonsMain"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_3"
        android:text="@string/button3"
        app:layout_constraintBottom_toTopOf="@id/button_dot"
        app:layout_constraintEnd_toStartOf="@id/button_plus"
        app:layout_constraintStart_toEndOf="@+id/button_2"
        app:layout_constraintTop_toBottomOf="@id/button_6"
        style="@style/buttonsMain"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_plus"
        android:text="@string/button_plus"
        app:layout_constraintTop_toBottomOf="@id/button_minus"
        app:layout_constraintStart_toEndOf="@+id/button_3"
        app:layout_constraintBottom_toTopOf="@id/button_division"
        style="@style/buttonsSpecial"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_C"
        android:text="@string/button_cancel"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_0"
        app:layout_constraintBottom_toTopOf="@id/button_delete"
        style="@style/buttonsSpecial"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_0"
        android:text="@string/button0"
        app:layout_constraintTop_toBottomOf="@id/button_2"
        app:layout_constraintStart_toEndOf="@+id/button_C"
        app:layout_constraintEnd_toStartOf="@id/button_dot"
        app:layout_constraintBottom_toTopOf="@id/button_eqls"
        style="@style/buttonsMain"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_dot"
        android:text="@string/button_dot"
        app:layout_constraintTop_toBottomOf="@id/button_3"
        app:layout_constraintStart_toEndOf="@+id/button_0"
        app:layout_constraintEnd_toStartOf="@id/button_division"
        app:layout_constraintBottom_toTopOf="@id/button_eqls"
        style="@style/buttonsSpecial"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_division"
        android:text="@string/button_div"
        app:layout_constraintBottom_toTopOf="@id/button_eqls"
        app:layout_constraintStart_toEndOf="@+id/button_dot"
        app:layout_constraintTop_toBottomOf="@id/button_plus"
        style="@style/buttonsSpecial"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_delete"
        android:text="@string/button_del"
        app:layout_constraintEnd_toStartOf="@id/button_eqls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_C"
        style="@style/buttonsSpecial"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_eqls"
        android:layout_width="0dp"
        android:text="@string/button_eql"
        app:layout_constraintStart_toEndOf="@+id/button_delete"
        app:layout_constraintTop_toBottomOf="@id/button_0"
        app:layout_constraintEnd_toEndOf="@id/button_division"
        style="@style/buttonsSpecial"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/theme_button"
        style="@style/changeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/theme_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_plus"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>